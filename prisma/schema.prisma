generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id        String   @id @default(uuid())
  title     String
  type      String   @default("movie")
  director  String
  budget    Float
  location  String
  duration  Int
  year      Int
  poster    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TVShow {
  id        String   @id @default(uuid())
  title     String
  type      String   @default("tvshow")
  director  String
  budget    Float
  location  String
  duration  Int
  startYear Int
  endYear   Int?
  poster    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
